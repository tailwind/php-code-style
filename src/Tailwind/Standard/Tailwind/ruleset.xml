<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="tailwind">
    <description>
        Rules for Tailwind's PHP codebase. If you disagree talk with Janell she is the goddess of all things PHP and will have the correct answer.
        http://edorian.github.io/php-coding-standard-generator/#phpcs can also be helpful to visualize these.
    </description>

    <!--Generic rules-->
    <rule ref="Generic.Classes.DuplicateClassName"/>
    <rule ref="Generic.CodeAnalysis.EmptyStatement"/>
    <rule ref="Generic.PHP.ForbiddenFunctions">
        <properties>
            <property
                    name="forbiddenFunctions"
                    type="array"
                    value="sizeof=>count,delete=>unset,print=>echo,ppx=>null,pjx=>null,pp=>null,dd=>null,pj=>null,var_dump=>null"
            />
        </properties>
    </rule>
    <rule ref="Generic.ControlStructures.InlineControlStructure"/>
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

    <!--Spacing issues and declarations-->
    <rule ref="Generic.Formatting.DisallowMultipleStatements"/>
    <rule ref="Generic.Formatting.MultipleStatementAlignment"/>
    <rule ref="Generic.WhiteSpace.ScopeIndent"/>
    <rule ref="Squiz.WhiteSpace.OperatorSpacing"/>

    <!--Finally settling the tabs vs spaces argument-->
    <rule ref="Generic.WhiteSpace.DisallowTabIndent"/>

    <!--PSR2-->
    <rule ref="PSR2.Namespaces.NamespaceDeclaration"/>
    <rule ref="PSR2.Methods.MethodDeclaration"/>

</ruleset>